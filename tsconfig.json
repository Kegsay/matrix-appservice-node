{
  "compilerOptions": {
    "incremental": true,
    "target": "ES2017",
    "module": "commonjs",
    "allowJs": false,
    "checkJs": false,
    "declaration": true,
    "sourceMap": false,
    "outDir": "./lib",
    "composite": false,
    "strict": true,
    "esModuleInterop": true
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "index.js"
  ],
  "typedocOptions": {
    "mode": "library",
    "out": ".typedoc",
    "excludePrivate": true,
    "excludeNotExported": true,
    "exclude": ["**/index.ts"]
  }
}
